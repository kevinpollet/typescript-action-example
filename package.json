{
  "name": "typescript-action-template",
  "version": "0.0.0",
  "private": true,
  "description": "A template to build GitHub Actions in Node.js with TypeScript",
  "author": "kevinpollet <pollet.kevin@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/kevinpollet/typescript-action-template#readme",
  "bugs": "https://github.com/kevinpollet/typescript-action-template/issues",
  "repository": "github:kevinpollet/typescript-action-template",
  "keywords": [
    "nodejs",
    "typescript",
    "github-action"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf lib",
    "format": "prettier --write '{src,test}/**/*' '*.{json,md}'",
    "lint": "eslint '{src,test}/**/*'",
    "prebuild": "npm run clean",
    "test": "jest --preset ts-jest test"
  },
  "dependencies": {
    "actions-toolkit": "2.1.0"
  },
  "devDependencies": {
    "@kevinpollet/tsconfig": "0.1.0",
    "@types/jest": "24.0.15",
    "@typescript-eslint/eslint-plugin": "1.11.0",
    "@typescript-eslint/parser": "1.11.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "6.0.0",
    "husky": "3.0.0",
    "jest": "24.8.0",
    "lint-staged": "9.1.0",
    "prettier": "1.18.2",
    "ts-jest": "24.0.2",
    "typescript": "3.5.2"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,ts,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
