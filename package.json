{
  "name": "typescript-action-template",
  "version": "0.0.0",
  "private": true,
  "description": "A template to build GitHub Actions in Node.js with TypeScript",
  "author": "kevinpollet <pollet.kevin@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/kevinpollet/typescript-action-template#readme",
  "bugs": "https://github.com/kevinpollet/typescript-action-template/issues",
  "repository": "github:kevinpollet/typescript-action-template",
  "keywords": [
    "nodejs",
    "typescript",
    "github-action"
  ],
  "scripts": {
    "build": "rm -rf lib && tsc --project tsconfig.build.json",
    "format": "prettier --write '{src,test,.github}/**/*' '*.{json,md,yml}'",
    "lint": "eslint '{src,test}/**/*'",
    "test": "jest --preset ts-jest"
  },
  "dependencies": {
    "@actions/core": "1.0.0"
  },
  "devDependencies": {
    "@kevinpollet/tsconfig": "0.1.0",
    "@types/jest": "24.0.18",
    "@typescript-eslint/eslint-plugin": "2.0.0",
    "@typescript-eslint/parser": "2.0.0",
    "eslint": "6.2.2",
    "eslint-config-prettier": "6.1.0",
    "husky": "3.0.4",
    "jest": "24.9.0",
    "lint-staged": "9.2.5",
    "prettier": "1.18.2",
    "ts-jest": "24.0.2",
    "typescript": "3.5.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "prettier",
      "prettier/@typescript-eslint"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,ts,md,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
